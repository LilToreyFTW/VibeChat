{
  "name": "vibechat-desktop",
  "version": "1.0.0",
  "description": "Desktop client for VibeChat",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run react:start\" \"wait-on http://localhost:3000 && electron .\"",
    "react:start": "cd ../frontend && npm start",
    "build": "npm run build:react && electron-builder",
    "build:react": "cd ../frontend && npm run build && robocopy build ../clients_chat_exe/build /E /NFL /NDL /NJH /NJS /nc /ns /np || exit 0",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "dist": "npm run build",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "axios": "^1.6.0",
    "electron-updater": "^6.6.2",
    "socket.io-client": "^4.7.2",
    "systeminformation": "^5.21.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^27.0.4",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.vibechat.desktop",
    "productName": "VibeChat Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "build/**/*",
      "node_modules/**/*",
      "!**/node_modules/@types/**",
      "!**/node_modules/electron",
      "!**/node_modules/electron-builder",
      "!**/node_modules/electron-devtools-installer",
      "node_modules/electron-updater/**/*",
      "../backend/**/*",
      "../chat-rooms/**/*",
      "../python-service/**/*",
      "../http_server_files/**/*"
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publish": {
        "provider": "generic",
        "url": "http://localhost:3001/updates/",
        "channel": "latest"
      }
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Network"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "VibeChat Desktop"
    },
    "publish": {
      "provider": "generic",
      "url": "http://localhost:3001/updates/",
      "channel": "latest"
    }
  }
}
