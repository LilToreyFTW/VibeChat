{
  "version": 2,
  "buildCommand": "npm run web:build",
  "devCommand": "npm run web:dev",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "vibechat-web/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/downloads/(.*)",
      "dest": "/downloads/$1"
    },
    {
      "src": "/web",
      "dest": "/web"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/downloads/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
