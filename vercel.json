{
  "version": 2,
  "buildCommand": "cd vibechat-web && npm install && npm run build",
  "outputDirectory": "vibechat-web/.next",
  "builds": [
    {
      "src": "vibechat-web/package.json",
      "use": "@vercel/next"
    }
  ],
  "functions": {
    "vibechat-web/**/*.tsx": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/downloads/(.*)",
      "dest": "/downloads/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
